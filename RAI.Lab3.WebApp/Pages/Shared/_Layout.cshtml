@using RAI.Lab3.Infrastructure.Roles
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - RAI.Lab3.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/RAI.Lab3.WebApp.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">RAI.Lab3.WebApp</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav">
                    @if (User.IsInRole(AppRoles.Teacher))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Rooms">Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/DeclareAvailability">Declare availability</a>
                        </li>
                    }
                    else if (User.IsInRole(AppRoles.Student))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/SignUpForProject">Sign up for project defense</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="cultureDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @{
                                var currentCulture = System.Globalization.CultureInfo.CurrentCulture.Name;
                                var cultureName = currentCulture == "pl-PL" ? "Polski" : "English";
                            }
                            @cultureName
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="cultureDropdown">
                            <li>
                                <a class="dropdown-item @(currentCulture == "pl-PL" ? "active" : "")"
                                   asp-page="/SetCulture"
                                   asp-route-culture="pl-PL"
                                   asp-route-returnUrl="@Context.Request.Path">
                                    Polski
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item @(currentCulture == "en-US" ? "active" : "")"
                                   asp-page="/SetCulture"
                                   asp-route-culture="en-US"
                                   asp-route-returnUrl="@Context.Request.Path">
                                    English
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2025 - RAI.Lab3.WebApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>